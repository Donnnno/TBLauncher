<?xml version="1.0" encoding="utf-8"?>
<GridView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dialog_padding_horizontal"
    android:clipToPadding="false"
    android:columnWidth="@dimen/app_grid_column_width"
    android:gravity="center"
    android:numColumns="auto_fit"
    android:paddingHorizontal="@dimen/app_grid_horizontal_padding"
    android:paddingVertical="@dimen/app_grid_vertical_padding"
    android:stretchMode="columnWidth"
    android:verticalSpacing="@dimen/app_grid_vertical_spacing"
    tools:layout_height="200dp"
    tools:listitem="@layout/item_grid" />
