<?xml version="1.0" encoding="utf-8"?><!-- fake the dialog margin with padding -->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/result_margin_horizontal"
    android:insetTop="@dimen/result_margin_vertical"
    android:insetRight="@dimen/result_margin_horizontal"
    android:insetBottom="@dimen/result_margin_vertical">

    <layer-list>
        <item>
            <shape>
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="2dp"
                    android:color="@color/colorAccent" />
                <corners android:radius="@dimen/result_corner_radius" />
            </shape>
        </item>
        <item>
            <!-- move the 1dp stoke outside -->
            <inset
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp">
                <shape>
                    <solid android:color="@color/black_overlay" />
                    <corners android:radius="@dimen/result_corner_radius" />
                </shape>
            </inset>
        </item>
    </layer-list>

</inset>
