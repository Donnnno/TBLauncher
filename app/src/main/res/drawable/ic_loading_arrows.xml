<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">

    <aapt:attr name="android:drawable">
        <vector
            android:width="6dp"
            android:height="6dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="rotationGroup"
                android:pivotX="12"
                android:pivotY="12"
                android:scaleX="-1">
                <path
                    android:name="arrowBottom"
                    android:fillColor="#FFF"
                    android:pathData="M7.52,21.48C4.25,19.94 1.91,16.76 1.55,13L0.05,13C0.56,19.16 5.71,24 12,24l0.66,-0.03 -3.81,-3.81 -1.33,1.32z" />
                <path
                    android:name="arrowTop"
                    android:fillColor="#FFF"
                    android:pathData="M12,0l-0.66,0.03 3.81,3.81 1.33,-1.33c3.27,1.55 5.61,4.72 5.96,8.48h1.5C23.44,4.84 18.29,0 12,0z" />
            </group>
        </vector>
    </aapt:attr>

    <target android:name="rotationGroup">

        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="rotation"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:valueFrom="0"
                android:valueTo="360" />
        </aapt:attr>

    </target>
</animated-vector>