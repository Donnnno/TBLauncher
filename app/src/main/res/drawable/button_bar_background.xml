        android:bottom="@dimen/dialog_margin_vertical"
        android:left="@dimen/dialog_margin_horizontal"
        android:right="@dimen/dialog_margin_horizontal"
        android:top="@dimen/dialog_margin_vertical">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#FF000000"
                android:startColor="#00000000"
                android:type="linear" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>
</layer-list>