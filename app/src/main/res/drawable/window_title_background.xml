<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="2dp"
    android:insetTop="2dp"
    android:insetRight="2dp">
    <shape>
        <gradient
            android:angle="90"
            android:centerColor="#A8000000"
            android:endColor="#FF000000"
            android:startColor="#00000000"
            android:type="linear" />
        <corners
            android:topLeftRadius="@dimen/result_corner_radius"
            android:topRightRadius="@dimen/result_corner_radius" />
        <padding
            android:left="@dimen/result_margin_horizontal"
            android:right="@dimen/result_margin_horizontal" />
    </shape>
</inset>