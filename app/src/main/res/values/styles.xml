<resources>

    <style name="PopupAnimationTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_top</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="PopupAnimationBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_thickness</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="palette_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
