<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="appSelectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:actionMenuTextColor">@color/undefined</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppThemeTransparent" parent="BaseThemeLight">
        <item name="resultColor">@android:color/white</item>
        <item name="searchColor">@android:color/white</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="searchShadowColor">@android:color/black</item>
        <item name="searchBackgroundColor">@null</item>
        <item name="listBackgroundColor">@color/black_overlay</item>
        <item name="dividerDrawable">@null</item>
        <item name="textShadowRadius">3</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:listPreferredItemHeight">54dp</item> <!-- 64dp -->
        <item name="android:listPreferredItemHeightSmall">40dp</item> <!-- 48dp -->
        <item name="android:listPreferredItemHeightLarge">67dp</item> <!-- 80dp -->

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>

        <item name="searchBackgroundOutline">@android:color/transparent</item>
    </style>

    <style name="GradientWindowTitle">
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingStart">@dimen/result_margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/result_margin_horizontal</item>
        <item name="android:background">@drawable/window_title_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GradientButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@drawable/button_bar_background</item>
    </style>

    <style name="GradientBorderlessButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TitleDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorBackground">#000</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/GradientWindowTitle</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>
        <item name="android:listDivider">@drawable/list_separator_light</item>

        <item name="resultColor">@android:color/white</item>
        <item name="searchColor">@android:color/white</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="searchShadowColor">@android:color/black</item>
        <item name="searchBackgroundColor">@null</item>
        <item name="listBackgroundColor">@color/black_overlay</item>
        <item name="dividerDrawable">@null</item>
        <item name="textShadowRadius">3</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:buttonBarStyle">@style/GradientButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/GradientBorderlessButton</item>
    </style>

    <style name="NoTitleDialogTheme" parent="TitleDialogTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ListPopupTitle">
        <item name="android:textSize">@dimen/popup_title</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
    </style>

    <style name="ListPopupItem">
        <item name="android:textSize">@dimen/result_small_size</item>
        <item name="android:textColor">@color/secondary_text_color_selector</item>
    </style>

    <style name="ListPopupTheme" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:listDivider">@drawable/list_separator_light</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/popup_padding_horizontal</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/popup_padding_horizontal</item>
    </style>

    <style name="SettingsDialogTitle" parent="GradientWindowTitle">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SettingsDialogTheme" parent="NoTitleDialogTheme">
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector</item>
        <item name="android:listDivider">@drawable/list_separator_light</item>
        <item name="android:windowTitleStyle">@style/SettingsDialogTitle</item>
    </style>

    <!--
        Because I can't find a way to theme the PreferenceCategory divider,
        (it should be `android:listSeparatorTextViewStyle`)
        I'll use a light background for the SettingsActivity for now
    -->
    <style name="SettingTheme" parent="AppThemeTransparent">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowBackground">#f0fff0</item>
        <item name="alertDialogTheme">@style/SettingsDialogTheme</item>
        <item name="android:textColor">@color/primary_text_color_selector_black</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector_black</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector_black</item>
        <item name="android:textColorTertiary">@color/tertiary_text_color_selector_black</item>
        <item name="colorPrimary">#ffd700</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>
